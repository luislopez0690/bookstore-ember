<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Get some Books!
</button>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Books</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>{{model.user.name}}</td>
        <td>
          {{#each model.user.books as |book|}}
          <ul>
              <li>{{book.name}}</li>
          </ul>
            {{/each}}
          </td>
          <td>
            {{#each model.user.books as |book|}}
            <ul>
              <!-- DELETE under development-->
              <button type="button" class="btn btn-danger"{{action 'deleteFromUserLibrary' book}} > Delete</button>
            </ul>
              {{/each}}
            </td>
      </tr>
  </tbody>
</table>
<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-inline">
          <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Add the New book</label>
          <select onchange={{action "setSelection" value="target.value"}} class="custom-select my-1 mr-sm-2">
            <option selected>Choose From Library</option>
            {{#each model.allBooks as |book|}}
              <option value={{book.id}} >{{book.name}}</option>
            {{/each}}
          </select>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" {{action 'addToUserLibrary'}} data-dismiss="modal" >Add to library</button>
      </div>
    </div>
  </div>
</div>
