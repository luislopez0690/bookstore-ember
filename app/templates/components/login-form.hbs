<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" id="formLogin">
                                <div class="form-group">
                                  <div class="input-group-prepend">
                                      <div class="input-group-text rounded-0">@</div>
                                      {{input value=name type="text" class="form-control form-control-lg rounded-0" id="inlineFormInputGroupUsername" placeholder="Username" }}
                                  </div>
                                </div>
                                <div class="form-group">
                                  <div class="input-group-prepend">
                                    <div class="input-group-text rounded-0">P</div>
                                      {{input value=password type="password" class="form-control form-control-lg rounded-0" placeholder="Password"}}
                                    </div>
                                </div>
                                <button class="btn btn-success btn-lg float-right"{{action 'checkIfUserExist' name password}}>Login</button>
                                <button class="btn btn-success btn-lg float-right"{{action 'createUser' name password}}>Sign In</button>
                            </form>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
